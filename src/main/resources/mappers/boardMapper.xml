<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//KO"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boardMapper">
	<!-- 게시판 글 작성 -->
	<insert id="insert">
	   INSERT INTO BOARD(    BNO 
	   					      , TITLE 
	   					      , CONTENT 
	   					      , WRITER  )
	                 VALUES(    BOARD_SEQ.NEXTVAL 
	                 		  , #{title}
	                 		  , #{content}
	                 		  , #{writer}  )
   
   </insert>
   
   <!-- 게시글 목록 보기 -->
   <select id="list" resultType="com.care.board.vo.BoardVO">
   		SELECT BNO
   			, TITLE
   			, WRITER
   			, REGDATE
   		FROM BOARD
   		ORDER BY BNO DESC
   </select>
   
   <!-- 게시글 조회하기 -->
   <select id="read" parameterType="int" resultType="com.care.board.vo.BoardVO">
   		SELECT BNO
   			, TITLE
   			, CONTENT
   			, WRITER
   			,REGDATE
   		FROM BOARD
   		WHERE BNO = #{bno}
   </select>
   
   <!-- 게시글 수정하기 -->
   <update id="update" parameterType="com.care.board.vo.BoardVO">
   		UPDATE BOARD
   			SET TITLE=#{title},
   				CONTENT=#{content}
   		WHERE BNO= #{bno} 
   </update>
   
   <!-- 게시글 삭제하기 -->
   <delete id="delete" parameterType="int">
   		DELETE 
   			FROM BOARD
   		WHERE BNO=#{bno}
   </delete>
</mapper>
	